<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    android:paddingBottom="25dp"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021/07/27"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/contest_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seoul"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="14sp"
                android:background="@drawable/text_green"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/view_round_blank"
            android:elevation="8dp"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/holldom"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#E2E2E2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp">
                <TextView
                    android:id="@+id/contest_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APL"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/contest_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00 start"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_card_red"/>
                    <TextView
                        android:id="@+id/contest_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>